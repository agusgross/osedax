<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WelcomeFragment"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding">


            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/recover_password"
                style="@style/TextTitle"
                />

            <TextView
                android:id="@+id/subtitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                android:text="@string/we_will_send_your_password"
                android:textAlignment="center"
                style="@style/TextSubtitle"
                android:layout_marginTop="4dp"
                />


            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/subtitleTextView"
                android:layout_marginTop="6dp"
                style="@style/AppTheme.Widget.EditText"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext|flagNoExtractUi"

                >
            </EditText>


            <Button
                android:id="@+id/recoverPasswordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailEditText"
                android:layout_marginTop="16dp"
                style="@style/AppTheme.Widget.ButtonPrimary"
                android:text="@string/recover_password"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="87dp"
                android:indeterminateTint="?attr/colorAccent"
                app:layout_constraintEnd_toEndOf="@id/recoverPasswordButton"
                app:layout_constraintStart_toStartOf="@id/recoverPasswordButton"
                app:layout_constraintTop_toTopOf="@id/recoverPasswordButton"
                app:layout_constraintBottom_toBottomOf="@id/recoverPasswordButton"
                android:visibility="gone"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>