<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="4000"
        >


        <KeyFrameSet>

            <KeyAttribute motion:motionTarget="@id/chapterTitleTextView"
                motion:framePosition="0"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.0" />
            </KeyAttribute>


            <KeyAttribute motion:motionTarget="@id/chapterTitleTextView"
                motion:framePosition="10"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/titleTextView"
                motion:framePosition="0"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.0" />
            </KeyAttribute>


            <KeyAttribute motion:motionTarget="@id/titleTextView"
                motion:framePosition="10"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/titleTextView"
                motion:framePosition="40"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/titleTextView"
                motion:framePosition="60"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/titleTextView"
                motion:framePosition="100"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/startText"
                motion:framePosition="0"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.0" />
            </KeyAttribute>


            <KeyAttribute motion:motionTarget="@id/startText"
                motion:framePosition="90"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/startText"
                motion:framePosition="100"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/arrowLayout"
                motion:framePosition="0"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/arrowLayout"
                motion:framePosition="90"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0.0" />
            </KeyAttribute>

            <KeyAttribute motion:motionTarget="@id/arrowLayout"
                motion:framePosition="100"

                >
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1.0" />
            </KeyAttribute>

        </KeyFrameSet>

    </Transition>





    <ConstraintSet android:id="@+id/start">


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

    </ConstraintSet>


</MotionScene>
