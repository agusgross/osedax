<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/open"
        android:drawable="@drawable/ic_drawer_closed"
        android:state_checked="true"

        />

    <item
        android:id="@+id/closed"
        android:drawable="@drawable/ic_user"/>

    <transition
        android:drawable="@drawable/avd_drawer_end_close"
        android:fromId="@id/open"
        android:toId="@id/closed"/>

    <transition
        android:drawable="@drawable/avd_drawer_end_open"
        android:fromId="@id/closed"
        android:toId="@id/open"/>

</animated-selector>